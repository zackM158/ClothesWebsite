@model IEnumerable<Entities.User>

@{
    ViewBag.Title = "Members";
}


<div class="container body-content">
    <div class="shopBar">
        <ul class="shopNavigation">
        </ul>
        <hr style="margin-top: 50px" />
    </div>


    <h1 class="FormTitle" id="TitleCenter">All Members</h1>
    
    <div class="validationDiv">
        @Html.ValidationSummary(true, "", new { @class = "text-danger validationCenter" })
    </div>

    <div class="shopBarMobile">
        <div id="shopNavigationCenter">
            <ul>
            </ul>
        </div>
    </div>
    


    <table class="manufacturersTable" id="centeredVertical">

        @foreach (var item in Model)
        {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @item.EmailAddress
        </td>
        <td>
            
            <a href="@Url.Action("ChangePremium", "Member", new {id = item.UserId})">
                @if (item.IsPremiumUser)
                {
                    <img src="~/Images/iconPremiumOnSmall.png">
                }
                else
                {
                    <img src="~/Images/iconPremiumSmall.png">
                }
            </a>
            <div class="webLine">|</div>
            <a href="@Url.Action("ChangeAdmin", "Member", new {id = item.UserId})">
                @if (item.IsAdmin)
                {
                    <img src="~/Images/iconAdminOnSmall.png">

                }
                else
                {
                    <img src="~/Images/iconAdminSmall.png">
                }
            </a>
        </td>
    </tr>
        }

    </table>
</div>

